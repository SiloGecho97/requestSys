.app-body(style='background-color: rgb(225, 227, 228);')
  main.main
    // Breadcrumb
    ol.breadcrumb
      li.breadcrumb-item Request Form Fill
      li.breadcrumb-item
        a(href='#') Office
      li.breadcrumb-item.active Equipment
      // Breadcrumb Menu
      li.breadcrumb-menu.d-md-down-none
        .btn-group(role='group' aria-label='Button group')
          a.btn(href='#')
            i.icon-speech
          a.btn(href='./')
            i.icon-graph
            |  &nbsp;Dashboard
          a.btn(href='#')
            i.icon-settings
            |  Request Form
    form(action='/send_request' method='POST')
      .container-fluid
        .animated.fadeIn
          .row
            .col-md-1
            .col-md-9
              .card
                .card-header
                  strong Request Form
                  small Form
                .card-body
                  // TABLE PART

                  hr
                  #accordion.panel-group
                    .panel.panel-default
                      .panel-heading
                        h4.panel-title
                          a(data-toggle='collapse' data-parent='#accordion' href='#collapse1') Desktops
                          span.badge.badge-info Desktops list
                          button.btn.btn-box-tool(type='button' data-widget='collapse')
                            i.fa.fa-minus
                          button.btn.btn-box-tool(type='button' data-widget='remove')
                            i.fa.fa-times
                      #collapse1.panel-collapse.collapse.in
                        .panel-body
                          .table-responsive

                             
                              
                            ul.list-group
                              li.list-group-item-primary
                                b Desktops
                            table#mytable1.table.table-responsive-sm.table-hover.table-bordered.table-striped.table-sm
                              thead
                                
                                th Item No
                               
                                th Item Description
                                th Item Model
                                th Item Brand
                                th Quantity
                                th Remark
                                th More Detail
                            
                          
                              tbody
                                
                                  each  item, i in items
                                  
                                    tr
                                      td=item.itemNo
                                        
                                      td=item.desc
                                      
                                      td=item.model
                                    
                                      td=item.brand
                                      td
                                        input.form-control(type='text' name='quantity' placeholder='Quantity')
                                      td
                                        input.form-control(type='text' name='remarks' placeholder='Remark')
                                      td
                                        p(data-placement='top' data-toggle='tooltip' title='Edit')
                                          button.btn.btn-primary.btn-xs(data-title='Edit' data-toggle='modal' data-target='#edit')
                                            span.glyphicon.glyphicon-plus  More Detail
                                
                            .clearfix
                            ul.pagination
                              li.page-item
                                a.page-link(href='#') Prev
                              li.page-item.active
                                a.page-link(href='#') 1
                              li.page-item
                                a.page-link(href='#') 2
                              li.page-item
                                a.page-link(href='#') 3
                              li.page-item
                                a.page-link(href='#') 4
                              li.page-item
                                a.page-link(href='#') Next
                    //
                      laptop
                   
